---
import Layout from "../layouts/main.astro";

// Verificar si el usuario está autenticado
const session = Astro.locals.session;
const user = Astro.locals.user;
---

<Layout content={{ title: "Astro Note Voice AI" }}>
  <div class="min-h-screen bg-background">
    <div class="container mx-auto px-4 py-8">
      <div class="text-center space-y-6">
        <h1 class="text-4xl font-bold">Astro Note Voice AI</h1>
        <p class="text-muted-foreground text-lg">
          Aplicación de notas con inteligencia artificial y reconocimiento de
          voz
        </p>

        <div class="max-w-md mx-auto border rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-2">Autenticación</h2>
          <p class="text-muted-foreground mb-4">
            {user ? `Bienvenido, ${user.name}` : "Inicia sesión para continuar"}
          </p>

          <div class="space-y-2">
            {
              user ? (
                <>
                  <a
                    href="/dashboard"
                    class="block w-full bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2 rounded-md text-center transition-colors"
                  >
                    Ir al Dashboard
                  </a>
                  <a
                    href="/api/auth/sign-out"
                    class="block w-full border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2 rounded-md text-center transition-colors"
                  >
                    Cerrar Sesión
                  </a>
                </>
              ) : (
                <>
                  <a
                    href="/login"
                    class="block w-full bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2 rounded-md text-center transition-colors"
                  >
                    Iniciar Sesión
                  </a>
                  <a
                    href="/register"
                    class="block w-full border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2 rounded-md text-center transition-colors"
                  >
                    Crear Cuenta
                  </a>
                </>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

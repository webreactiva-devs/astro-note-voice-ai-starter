---
import { auth } from "@/lib/auth";

// Verificar si el usuario está autenticado
const session = await auth.api.getSession({
  headers: Astro.request.headers,
});

// Si hay sesión, mostrar información del usuario
const user = session?.user;
---

<html lang="es">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <title>Test Auth - Astro</title>
</head>
<body>
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Test de Autenticación</h1>
    
    {user ? (
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
        <h2 class="text-xl font-semibold mb-2">¡Usuario autenticado!</h2>
        <p><strong>ID:</strong> {user.id}</p>
        <p><strong>Email:</strong> {user.email}</p>
        <p><strong>Nombre:</strong> {user.name}</p>
        <p><strong>Email verificado:</strong> {user.emailVerified ? 'Sí' : 'No'}</p>
        {user.image && <p><strong>Imagen:</strong> {user.image}</p>}
      </div>
    ) : (
      <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded">
        <p>No hay usuario autenticado. Puedes implementar componentes de login/registro usando el authClient.</p>
        <p class="mt-2">API endpoints disponibles:</p>
        <ul class="list-disc list-inside mt-2">
          <li>POST /api/auth/sign-up/email - Registro con email/password</li>
          <li>POST /api/auth/sign-in/email - Login con email/password</li>
          <li>POST /api/auth/sign-out - Cerrar sesión</li>
          <li>GET /api/auth/session - Obtener sesión actual</li>
        </ul>
      </div>
    )}

    <div class="mt-8">
      <h2 class="text-xl font-semibold mb-4">Estado de la configuración:</h2>
      <div class="bg-gray-100 p-4 rounded">
        <p><strong>Base URL:</strong> {import.meta.env.BETTER_AUTH_URL || "http://localhost:4321"}</p>
        <p><strong>Database:</strong> Turso/LibSQL configurado</p>
        <p><strong>Email/Password:</strong> ✅ Habilitado</p>
        <p><strong>Auto Sign-in:</strong> ✅ Habilitado</p>
      </div>
    </div>
  </main>
</body>
</html>
